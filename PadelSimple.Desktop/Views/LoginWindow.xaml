<Window x:Class="PadelSimple.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PadelSimple - Login"
        WindowStartupLocation="CenterScreen"
        Height="250" Width="350"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Gebruikersnaam" FontWeight="Bold"/>
            <TextBox Text="{Binding Username}" Margin="0,5"/>

            <TextBlock Text="Wachtwoord" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
        </StackPanel>

        <Button Grid.Row="1"
                Content="Login"
                Height="35"
                HorizontalAlignment="Right"
                Width="100"
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}" />
    </Grid>
</Window>
