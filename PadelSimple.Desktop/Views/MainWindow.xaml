<Window x:Class="PadelSimple.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PadelSimple"
        WindowStartupLocation="CenterScreen"
        Width="950" Height="600">

    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Bestand">
                <MenuItem Header="Afmelden" Command="{Binding LogoutCommand}" />
                <MenuItem Header="Afsluiten" Command="{Binding ExitCommand}" />
            </MenuItem>

            <MenuItem Header="Beheer"
                      Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}}">
                <MenuItem Header="Gebruikersbeheer (nog te bouwen)" />
            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Reservaties -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Reservaties" FontSize="18" FontWeight="Bold"/>

                <ListView ItemsSource="{Binding Reservations}"
                          SelectedItem="{Binding SelectedReservation}"
                          Margin="0,5,0,5"
                          Height="350">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Datum" DisplayMemberBinding="{Binding Date}" Width="90"/>
                            <GridViewColumn Header="Start" DisplayMemberBinding="{Binding StartTime}" Width="70"/>
                            <GridViewColumn Header="Einde" DisplayMemberBinding="{Binding EndTime}" Width="70"/>
                            <GridViewColumn Header="Terrein" DisplayMemberBinding="{Binding Court.Name}" Width="120"/>
                            <GridViewColumn Header="Spelers" DisplayMemberBinding="{Binding NumberOfPlayers}" Width="60"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Vernieuwen" Command="{Binding RefreshCommand}" />
                    <Button Content="Nieuwe reservatie" Command="{Binding NewReservationCommand}" />
                    <Button Content="Verwijderen" Command="{Binding DeleteReservationCommand}" />
                </StackPanel>
            </StackPanel>

            <!-- Terreinen & Materiaal -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Terreinen" FontSize="18" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{Binding Courts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="3">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="Capaciteit:"/>
                                    <TextBlock Text="{Binding Capacity}" Margin="5,0,0,0"/>
                                    <TextBlock Text="(indoor)" Margin="10,0,0,0"
                                               Visibility="{Binding IsIndoor, Converter={StaticResource BoolToVisibility}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Materiaal" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>
                <ItemsControl ItemsSource="{Binding Equipment}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="3">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="Beschikbaar:"/>
                                    <TextBlock Text="{Binding AvailableQuantity}" Margin="5,0,0,0"/>
                                    <TextBlock Text="/" Margin="2,0,2,0"/>
                                    <TextBlock Text="{Binding TotalQuantity}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </Grid>
    </DockPanel>
</Window>
