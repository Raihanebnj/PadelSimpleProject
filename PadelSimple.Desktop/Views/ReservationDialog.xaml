<Window x:Class="PadelSimple.Desktop.Views.ReservationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuwe Reservatie"
        WindowStartupLocation="CenterOwner"
        Height="430" Width="380">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>

            <Label Content="Datum"/>
            <DatePicker SelectedDate="{Binding Date}" />

            <Label Content="Starttijd (bv 18:00)"/>
            <!-- TimeSpan-binding; gebruiker tikt bv. 18:00 -->
            <TextBox Text="{Binding StartTime, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Eindtijd (bv 19:00)"/>
            <TextBox Text="{Binding EndTime, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Terrein"/>
            <ComboBox ItemsSource="{Binding Courts}"
                      SelectedItem="{Binding SelectedCourt}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,5"/>

            <Label Content="Materiaal"/>
            <ComboBox ItemsSource="{Binding EquipmentList}"
                      SelectedItem="{Binding SelectedEquipment}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,5"/>

            <Label Content="Aantal materiaal"/>
            <TextBox Text="{Binding EquipmentQuantity, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Aantal spelers"/>
            <TextBox Text="{Binding PlayerCount, UpdateSourceTrigger=PropertyChanged}" />

            <!-- foutmelding uit viewmodel -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       Margin="0,8,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Annuleren"
                    Width="80"
                    Margin="0,0,10,0"
                    IsCancel="True"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            <Button Content="Opslaan"
                    Width="80"
                    IsDefault="True"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
