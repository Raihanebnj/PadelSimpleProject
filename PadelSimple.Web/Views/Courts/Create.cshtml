@model PadelSimple.Models.Domain.Court
@{
    ViewData["Title"] = "Court toevoegen";
}

<h1>Court toevoegen</h1>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="mb-2">
        <label class="form-label">Naam</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-2">
        <label class="form-label">Capaciteit</label>
        <input class="form-control" asp-for="Capacity" type="number" />
    </div>

    <div class="form-check mb-2">
        <input class="form-check-input" asp-for="IsIndoor" type="checkbox" />
        <label class="form-check-label">Indoor</label>
    </div>

    <button class="btn btn-primary" type="submit">Opslaan</button>
    <a class="btn btn-secondary" asp-action="Index">Annuleren</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
