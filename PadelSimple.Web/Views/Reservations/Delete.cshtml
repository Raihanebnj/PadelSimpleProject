@model PadelSimple.Models.Domain.Reservation
@{
    ViewData["Title"] = "Delete reservatie";
}

<h1>Delete reservatie</h1>

<p>Ben je zeker?</p>

<ul>
    <li>Datum: @Model.Date.ToString("dd/MM/yyyy")</li>
    <li>Court: @Model.Court?.Name</li>
    <li>Start: @Model.StartTime</li>
    <li>Einde: @Model.EndTime</li>
</ul>

<form method="post">
    @Html.AntiForgeryToken()
    <button class="btn btn-danger" type="submit">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Annuleren</a>
</form>
