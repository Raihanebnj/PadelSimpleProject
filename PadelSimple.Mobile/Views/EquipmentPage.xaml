<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PadelSimple.Mobile.Views.EquipmentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Materiaal">

    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="12">

            <HorizontalStackLayout>
                <Label Text="Materiaal" FontSize="20" FontAttributes="Bold" />
                <Button Text="Refresh" Command="{Binding LoadCommand}" HorizontalOptions="EndAndExpand" />
            </HorizontalStackLayout>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

       
            <Label Text="{Binding Info}" TextColor="Green">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding Info}" Value="">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                    <Trigger TargetType="Label" Property="Text" Value="{x:Null}">
                        <Setter Property="IsVisible" Value="False" />
                    </Trigger>
                </Label.Triggers>
            </Label>

            
            <Label Text="{Binding Error}" TextColor="Red">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding Error}" Value="">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                    <Trigger TargetType="Label" Property="Text" Value="{x:Null}">
                        <Setter Property="IsVisible" Value="False" />
                    </Trigger>
                </Label.Triggers>
            </Label>

            <CollectionView ItemsSource="{Binding Equipment}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,6" BorderColor="#333" CornerRadius="10">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" />
                                <Label Text="{Binding TotalQuantity, StringFormat='Totaal: {0}'}" />
                                <Label Text="{Binding AvailableQuantity, StringFormat='Beschikbaar: {0}'}" />
                                <Label Text="{Binding IsActive, StringFormat='Actief: {0}'}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
